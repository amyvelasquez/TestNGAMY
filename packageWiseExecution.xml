<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke and Regression Test Suite">
    <test verbose="2" preserve-order="true" name="Tests for smoke test cases">
       <groups>
           <run>
               <include name="smoke"></include>
           </run>
       </groups>
        <packages>
            <package name="com.testng.basics.class3"></package>
            <package name="com.testng.basics.class2"></package>
        </packages>
    </test>

    <test verbose = "2" preserve-order="true" name="Tests for regression test cases">
        <groups>
            <run>
                <include name="regression"></include>
            </run>
        </groups>
        <packages>
            <package name="com.testng.basics.class2"></package>
            <package name="com.testng.basics.class3"></package>
        </packages>
    </test>

</suite>
